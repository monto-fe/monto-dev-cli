{
	"name": "monto-dev-cli",
	"version": "0.0.3",
	"description": "Cli tool for frontend app dev",
	"author": "heng.du, pengfei.lv",
	"license": "MIT",
	"type": "commonjs",
	"bin": {
		"monto-dev-cli": "index.js"
	},
	"gitHooks": {
		"pre-commit": "lint-staged"
	},
	"main": "index.js",
	"files": [
		"index.js",
		"config.js",
		"command",
		"lib",
		"README.md"
	],
	"scripts": {
		"start": "node ./index.js",
		"prettier": "prettier --write \"**/*.{js,jsx,tsx,ts,less,md,json}\"",
		"docs:update": "node scripts/docs.js",
		"publish:patch": "npm version patch && npm publish --registry=https://registry.npmjs.org"
	},
	"dependencies": {
		"chalk": "4",
		"execa": "^5.1.1",
		"express": "^4.18.2",
		"get-port": "5.1.0",
		"inquirer": "^7.3.2",
		"mockjs": "^1.1.0",
		"ora": "^5.4.1",
		"response-time": "^2.3.2",
		"yargs": "^13.2.4",
		"open": "8.4.2"
	},
	"engines": {
		"node": ">=8.10.0"
	},
	"devDependencies": {
		"lint-staged": "^13.0.3",
		"prettier": "^2.7.1",
		"yorkie": "^2.0.0"
	},
	"lint-staged": {
		"*.{js,jsx,less,md,json}": [
			"prettier --write \"**/*.{js,jsx,tsx,ts,less,md,json}\"",
			"npx eslint \"**/*.{js,ts}\""
		],
		"*.ts?(x)": [
			"prettier --parser=typescript --write"
		]
	}
}
